<resources>
    <!-- Base application day theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowBackground">?attr/backgroundColor</item>
        <item name="backgroundColor">@color/white</item>
        <item name="textColor">@color/black</item>
        <item name="textTitleColor">@color/colorAccent</item>
        <item name="cardBackground">@color/white</item>
    </style>

    <!-- Base application night theme. -->
    <style name="NightTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowBackground">?attr/backgroundColor</item>
        <item name="backgroundColor">@color/fadeBlack</item>
        <item name="textColor">@color/white</item>
        <item name="textTitleColor">@color/colorAccent</item>
        <item name="cardBackground">@color/black</item>
    </style>
</resources>